
/* 页面样式 */
.about-page {
  position: relative;
  width: 100vw;
  overflow: hidden;
  background-color: #f0f3f4;
}
.bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-image: linear-gradient(120deg, #84fab0 0%, #8fd3f4 100%);
  z-index: -1;
  opacity: 0.4;
}
.app-header {
  text-align: center;
  padding: 70px 0;
}
.app-name {
  font-size: 32px;
  font-weight: bold;
  color: #007aff;
  text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
}
.app-version {
  margin-top: 12px;
  font-size: 16px;
  color: #333;
}
.company-info {
  margin: 30px;
  padding: 20px;
  border-radius: 15px;
  background-color: rgba(255, 255, 255, 0.8);
}
.company-title {
  font-size: 24px;
  color: #007aff;
  margin-bottom: 15px;
}
.company-desc {
  font-size: 16px;
  color: #555;
  line-height: 1.6;
}
.advantages {
  margin: 30px;
  padding: 20px;
  border-radius: 15px;
  background-color: rgba(255, 255, 255, 0.8);
}
.advantages-title {
  font-size: 24px;
  color: #007aff;
  margin-bottom: 15px;
}
.advantage-item {
  display: flex;
  margin-bottom: 15px;
  align-items: center;
}
.advantage-icon {
  margin-right: 10px;
}
.advantage-text {
  color: #555;
  font-size: 16px;
}
.function-display {
  margin: 30px;
  padding: 20px;
  border-radius: 15px;
  background-color: rgba(255, 255, 255, 0.8);
}
.function-title {
  font-size: 24px;
  color: #007aff;
  margin-bottom: 15px;
}
.function-items {
  display: flex;  
  flex-direction: column;
  flex-wrap: wrap;
  gap: 20px;
}
.function-item {
  display: flex;
  align-items: center;
}
.function-icon {
  margin-right: 10px;
}
.function-text {
  color: #555;
  font-size: 16px;
}
.login-button {
  width: 180px;
  height: 48px;
  margin: 40px auto 20px;
  background-color: #007aff;
  color: white;
  border: none;
  border-radius: 24px;
  font-size: 18px;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  transition: transform 0.25s ease;
}
.login-button:active {
  transform: translateY(2px);
}
.team-info {
  margin: 30px;
  padding: 20px;
  border-radius: 15px;
  background-color: rgba(255, 255, 255, 0.8);
}
.team-title {
  font-size: 24px;
  color: #007aff;
  margin-bottom: 15px;
}
.team-members {
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
  gap: 20px;
  margin-bottom: 15px;
}
.team-member {
  text-align: center;
  max-width: 25%;
}
.member-avatar {
  width: 70px;
  height: 70px;
  border-radius: 50%;
  margin-bottom: 10px;
}
.member-name {
  font-weight: bold;
  color: #007aff;
  font-size: 16px;
}
.member-department {
  color: #555;
  font-size: 14px;
}
.team-slogan {
  text-align: center;
  color: #555;
  font-style: italic;
}
.copyright {
  text-align: center;
  color: #aaa;
  font-size: 12px;
  margin-bottom: 20rpx;
}
