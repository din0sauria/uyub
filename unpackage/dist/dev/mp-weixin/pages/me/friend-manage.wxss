/* 水平间距 */
.container {
  padding: 24rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}
.header {
  padding: 32rpx 0;
}
.header .title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}
.friend-list {
  height: calc(100vh - 160rpx);
}
.friend-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  margin-bottom: 20rpx;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}
.friend-item .avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 24rpx;
}
.friend-item .info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}
.friend-item .info .nickname {
  font-size: 32rpx;
  color: #333;
}
.friend-item .info .friend-id {
  font-size: 24rpx;
  color: #999;
}
.friend-item .delete-btn {
  padding: 16rpx;
  margin-left: 16rpx;
}